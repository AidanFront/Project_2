

<%= form_tag '/users/create' ,:class => "new_user" do %>
  <%= hidden_field_tag '_method', 'post' %>
  <%= label_tag 'name' %>
  <%= text_field_tag :name %>

  <%= label_tag 'email' %>
  <%= text_field_tag :email %>

  <%= label_tag 'passowrd' %>
  <%= password_field_tag :password %>

  <button class="btn_general" >Create</button>
<% end %>
